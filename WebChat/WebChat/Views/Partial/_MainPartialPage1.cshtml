@model WebChat.Models.ViewModel

<div class="middle">
    <h4>Tin nhắn</h4>
    <button type="button" class="btn round" data-toggle="modal" data-target="#compose"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="eva eva-edit-2"><g data-name="Layer 2"><g data-name="edit-2"><rect width="24" height="24" opacity="0"></rect><path d="M19 20H5a1 1 0 0 0 0 2h14a1 1 0 0 0 0-2z"></path><path d="M5 18h.09l4.17-.38a2 2 0 0 0 1.21-.57l9-9a1.92 1.92 0 0 0-.07-2.71L16.66 2.6A2 2 0 0 0 14 2.53l-9 9a2 2 0 0 0-.57 1.21L4 16.91a1 1 0 0 0 .29.8A1 1 0 0 0 5 18zM15.27 4L18 6.73l-2 1.95L13.32 6z"></path></g></g></svg>
    </button>
    
    <hr>
    <ul class="nav discussions " role="tablist">
        @foreach (var item1 in Model.ChatRoom)
        {
            <li id="@(item1.RoomID)RoomList">
                <a href="#chat@(item1.RoomID)" id="@(item1.RoomID)" class="filter groups roomtab" data-chat="open" data-toggle="tab" role="tab" aria-controls="chat2" aria-selected="false">
                    <div class="content">
                        <div class="headline">
                            <img src="~/Content/img/avatars/avatar-group-1.jpg" alt="avatar">
                            <h5>@item1.RoomName</h5>
                            <span>Hôm nay</span>
                        </div>
                        @*<p>Commit all </p>*@
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

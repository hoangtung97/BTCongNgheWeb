@model WebChat.Models.ViewModel
<div class="top">
    <form>
        <input id="SearchText" class="form-control" placeholder="Tìm kiếm"></input>
        <button id="SearchButton" type="button" class="btn prepend SearchButton"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="eva eva-search"><g data-name="Layer 2"><g data-name="search"><rect width="24" height="24" opacity="0"></rect><path d="M20.71 19.29l-3.4-3.39A7.92 7.92 0 0 0 19 11a8 8 0 1 0-8 8 7.92 7.92 0 0 0 4.9-1.69l3.39 3.4a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42zM5 11a6 6 0 1 1 6 6 6 6 0 0 1-6-6z"></path></g></g></svg></button>
    </form>
    <ul class="nav" role="tablist">
        <li><a class="filter-btn  active" id="GroupA" data-toggle="tab" data-filter="groups">Nhóm</a></li>
    </ul>

</div>
<div class="middle">
    <h4>Tin nhắn</h4>
    <button type="button" class="btn round" data-toggle="modal" data-target="#compose">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="eva eva-edit-2"><g data-name="Layer 2"><g data-name="edit-2"><rect width="24" height="24" opacity="0"></rect><path d="M19 20H5a1 1 0 0 0 0 2h14a1 1 0 0 0 0-2z"></path><path d="M5 18h.09l4.17-.38a2 2 0 0 0 1.21-.57l9-9a1.92 1.92 0 0 0-.07-2.71L16.66 2.6A2 2 0 0 0 14 2.53l-9 9a2 2 0 0 0-.57 1.21L4 16.91a1 1 0 0 0 .29.8A1 1 0 0 0 5 18zM15.27 4L18 6.73l-2 1.95L13.32 6z"></path></g></g></svg>
    </button>

    <hr>
    <ul class="nav discussions " role="tablist">
        @foreach (var item1 in Model.ChatRoom)
        {
            <li id="@(item1.RoomID)RoomList" class="RoomList" name="@(item1.RoomName)">
                <a href="#chat@(item1.RoomID)" id="@(item1.RoomID)" class="filter groups roomtab" data-chat="open" data-toggle="tab" role="tab" aria-controls="chat2" aria-selected="false">
                    <div class="content">
                        <div class="headline">
                            <img src="~/Content/img/avatars/avatar-group-1.jpg" alt="avatar">
                            <h5>@item1.RoomName</h5>
                            <span>Hôm nay</span>
                        </div>
                        @*<p>Commit all </p>*@
                    </div>
                </a>
            </li>
        }
    </ul>
</div>


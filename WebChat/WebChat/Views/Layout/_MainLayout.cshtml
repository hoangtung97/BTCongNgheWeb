                            <!-- Giao diện -->
                            <li>
                                <a href="#" class="headline" data-toggle="collapse" aria-expanded="false" data-target="#appearance" aria-controls="appearance">
                                    <div class="title">
                                        <h5>Giao diện</h5>
                                        <p>Tùy chỉnh giao diện cho TPMH Chat</p>
                                    </div>
                                    <i data-eva="arrow-ios-forward"></i>
                                    <i data-eva="arrow-ios-downward"></i>
                                </a>
                                <div class="content collapse" id="appearance" data-parent="#preferences">
                                    <div class="inside">
                                        <ul class="options">
                                            <li>
                                                <div class="headline">
                                                    <h5>Chế độ ban đêm</h5>
                                                    <label class="switch">
                                                        <input type="checkbox">
                                                        <span class="slider round mode"></span>
                                                    </label>
                                                </div>
                                                <p>Chuyển sang màu tối cho sử dụng vào ban đêm.</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                            <!-- Két thúc giao diện -->
                        </ul>
                    </div>
                    <!-- Kết thúc tùy chọn -->
                </div>
            </div>
        </div>
        <!-- Kết thúc Sidebar -->
        <!--  Chat -->
        <div class="chat">
            <div class="tab-content">
                @{Html.RenderPartial("~/Views/Partial/ChatRoomPartialPage1.cshtml");}
            </div>
        </div>
        <!-- End of Chat -->
        <!-- Start of Compose -->
        <div class="modal fade" id="compose" tabindex="-1" role="dialog" aria-labelledby="compose" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5>Thêm phòng</h5>
                        <button type="button" class="btn round" data-dismiss="modal" aria-label="Close">
                            <i data-eva="close"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <ul class="nav" role="tablist">
                            <li><a href="#details" class="active" data-toggle="tab" role="tab" aria-controls="details" aria-selected="true">Chi tiết</a></li>
                        </ul>
                        <div class="tab-content">
                            <!-- Start of Details -->
                            <div class="details tab-pane fade show active" id="details" role="tabpanel">
                                <form>
                                    <div class="form-group">
                                        <label>Tên phòng</label>
                                        <input type="text" class="form-control" placeholder="Tên nhóm?">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <textarea class="form-control" placeholder="Nhập mật khẩu"></textarea>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn primary">Thêm phòng</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Compose -->
    </div>
    <!-- Layout -->
    <script src="~/Content/js/vendor/jquery-slim.min.js"></script>
    <script src="~/Content/js/vendor/popper.min.js"></script>
    <script src="~/Content/js/vendor/feather.min.js"></script>
    <script src="~/Content/js/vendor/eva.min.js"></script>
    <script src="~/Content/js/vendor/jquery.js"></script>
    <script src="~/Content/js/vendor/bootstrap.min.js"></script>
    <script src="~/Content/js/swipe.min.js"></script>
    <script src="~/Content/js/message.js">


    </script>
</body>
</html>																																																										
@model WebChat.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
	<title>TPMH chat</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="~/Content/img/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/fonts/iconic/css/material-design-iconic-font.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/Content/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/vendor/select2/select2.min.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/Content/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/Content/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/Content/css/main.css">
<!--===============================================================================================-->
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <div class="container-login100" style="background-image: url('img/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
            <form class="login100-form validate-form" action="~/SignUp/SignUp" method="post">
                <span class="login100-form-title p-b-37">
                    ĐĂNG KÝ
                </span>

                <div class="wrap-input100 validate-input m-b-20" data-validate="Hãy nhập tên đăng nhập">
                    <label for="ussername1">Tên đăng nhập:</label>
                    <input class="form-control" type="text" name="username" placeholder="Nhập tên đăng nhập của bạn" id="username1">
                
                </div>
                <div class="wrap-input100 validate-input m-b-20" data-validate="Hãy nhập tên người dùng">
                    <label for="name1">Tên người dùng:</label>
                    <input class="form-control" type="text" name="displayname" placeholder="Nhập tên người dùng của bạn" id="name1">
               
                </div>
                <div class="wrap-input100 validate-input m-b-20" data-validate="Hãy nhập ngày sinh">
                    <label for="date1">Ngày sinh:</label>
                    <input class="form-control" type="date" name="birthdate" placeholder="Ngày sinh" id="date1">
               
                </div>
                <div class="wrap-input100 validate-input m-b-20" data-validate="Giới tính">
                    <label for="sex1">Giới tính:</label>
                    <select class="form-control" id="sex1">
                        <option value="nam">Nam</option>
                        <option value="nu">Nữ</option>
                        <option value="khongro">Không rõ</option>
                    </select>
                
                </div>

                <script>
                    function checkpass() {
                        if (document.getElementById('password').value ==
                            document.getElementById('confirm').value) {
                            document.getElementById('submit').disable = false;
                            document.getElementById('message').style.color = 'green'
                            document.getElementById('message').innerHTML = 'Mật khẩu khớp'
                        }
                        else {
                            document.getElementById('submit').disable = true;
                            document.getElementById('message').style.color = 'red'
                            //document.getElementById('message').style("font-size","11")
                            document.getElementById('message').innerHTML = "    Mật khẩu không khớp"
                        }
                    }
                </script>

                <div class="wrap-input100 validate-input m-b-25" data-validate="Hãy nhập mật khẩu">
                    <label for="password">Mật khẩu:</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Nhập mật khẩu " onkeyup="checkpass();" />
                    
                </div>
                <div class="wrap-input100 validate-input m-b-30" data-validate="Hãy nhập lại mật khẩu">
                    <label for="confirm">Xác nhận mật khẩu:</label>
                    <input class="form-control" type="password" name="password" id="confirm" placeholder="Xác nhận mật khẩu" onkeyup="checkpass();">
                
                    <span id="message" style="text-align:center; margin-left:15px"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit" id="submit">
                        ĐĂNG KÝ
                    </button>
                </div>
                <div class="text-center p-t-20">
                    <a href="~/Login/Login" class="txt2 hov1">

                        @*@Html.Action("Login", "Login");*@
                        Quay lại Đăng nhập
                    </a>

                </div>
            </form>
        </div>
    </div>
    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/js/main.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }

</body>
</html>